#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# Configure environment
set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output
# set -x            # enable debugging

# Directories
BUILD_DIR=$1
BUILDPACK_DIR="$(dirname $(dirname $0))"

echo "-----> Moving the start-ssh-tunnel script into app/bin"
mkdir -p $BUILD_DIR/bin
cp "$BUILDPACK_DIR/bin/start-ssh-tunnel" $BUILD_DIR/bin/
chmod +x $BUILD_DIR/bin/start-ssh-tunnel

echo "-----> ssh-tunnel done"
